<?xml version="1.0" encoding="UTF-8"?>
<p:hibernate-configuration xmlns:p="http://www.hibernate.org/xsd/orm/cfg" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.hibernate.org/xsd/orm/cfg http://www.hibernate.org/xsd/orm/cfg/hibernate-configuration-4.0.xsd ">
  <p:session-factory>
  <p:property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</p:property>
  <p:property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</p:property>
  <p:property name="hibernate.connection.url">jdbc:mysql:///company?useUncode=true&amp;characterEncoding=utf8</p:property>
  <p:property name="hibernate.connection.username">root</p:property>
  <p:property name="hibernate.connection.password">root</p:property>
  <p:property name="hibernate.hbm2ddl.auto">create</p:property>
  <p:property name="hibernate.show_sql">true</p:property>
  <p:property name="hibernate.format_sql">true</p:property>
  <p:mapping class="org.hibernate2.dao.Emp"/>
  </p:session-factory>
</p:hibernate-configuration>
